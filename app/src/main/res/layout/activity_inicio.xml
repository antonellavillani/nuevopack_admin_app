<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido Principal -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blanco">

        <!-- Contenido -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- Título -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_panel_admin"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/verde_oscuro"
                    android:layout_marginTop="16dp" />

                <!-- Subtítulo -->
                <TextView
                    android:id="@+id/tituloBienvenido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/gris_oscuro" />

                <!-- Resumen en Cards -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:divider="?android:attr/dividerHorizontal"
                    android:showDividers="middle"
                    android:dividerPadding="8dp">

                    <!-- Servicios -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <include android:id="@+id/includeCardServicios"
                            layout="@layout/card_resumen" />
                    </LinearLayout>

                    <!-- Precios -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <include android:id="@+id/includeCardPrecios"
                            layout="@layout/card_resumen" />
                    </LinearLayout>

                    <!-- Usuarios -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <include android:id="@+id/includeCardUsuarios"
                            layout="@layout/card_resumen" />
                    </LinearLayout>

                    <!-- Estadísticas del sitio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <include android:id="@+id/includeCardEstadisticas"
                            layout="@layout/card_resumen" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Accesos Rápidos -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_accesos_rapidos"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/verde_oscuro"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnAccesoNuevoServicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/atajo_nuevo_servicio"
                    style="@style/ButtonDashboard" />

                <Button
                    android:id="@+id/btnAccesoNuevoPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/atajo_nuevo_precio"
                    style="@style/ButtonDashboard"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnAccesoNuevoUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/atajo_nuevo_usuario"
                    style="@style/ButtonDashboard"
                    android:layout_marginTop="8dp" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:padding="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Card Actividad Reciente -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <include android:id="@+id/includeCardActividad"
                            layout="@layout/card_info" />
                    </LinearLayout>

                    <!-- Card Alertas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <include android:id="@+id/includeCardAlertas"
                            layout="@layout/card_alertas" />
                </LinearLayout>

            </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>