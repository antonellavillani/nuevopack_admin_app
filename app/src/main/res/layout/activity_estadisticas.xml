<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/blanco"
    tools:context=".view.EstadisticasActivity">

    <TextView
        android:id="@+id/tituloEstadisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_estadisticas"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/negro"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerEstadisticas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_estadistica"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tituloEstadisticas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
