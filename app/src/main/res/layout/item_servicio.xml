<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gris_medio"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Shimmer para la imagen -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLayout"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:shimmer_auto_start="true"
            app:shimmer_base_alpha="0.9"
            app:shimmer_duration="1000">

            <ImageView
                android:id="@+id/imagenServicio"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:src="@drawable/placeholder" />
        </com.facebook.shimmer.ShimmerFrameLayout>

    <TextView
        android:id="@+id/nombreServicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/negro"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/chevronServicio"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20sp"
            android:src="@drawable/ic_chevron_right" />
    </LinearLayout>

    <!-- Botones Editar y Eliminar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnEditarServicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/boton_editar"
            android:textColor="@color/blanco"
            android:backgroundTint="@color/verde_manzana"
            android:fontFamily="@font/poppins_regular"/>

        <View
            android:layout_width="8dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnEliminarServicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/boton_eliminar"
            android:textColor="@color/blanco"
            android:backgroundTint="@color/rojo_manzana"
            android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>
</LinearLayout>