<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardBackgroundColor="@color/blanco"
    android:layout_marginBottom="16dp"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tituloInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actividad Reciente"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/negro" />

        <View
            android:layout_width="48dp"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:background="@color/amarillo" />

        <!-- Placeholder de items -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gris_claro"
            android:textColor="@color/gris_oscuro"
            android:padding="12dp"
            android:text="• Servicio 'Tarjetas personales' actualizado ayer"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_regular" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gris_claro"
            android:textColor="@color/gris_oscuro"
            android:padding="12dp"
            android:text="• Nuevo usuario 'lucas@example.com' creado el lunes"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_regular" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gris_claro"
            android:textColor="@color/gris_oscuro"
            android:padding="12dp"
            android:text="• Precio actualizado para 'Bolsas impresas'"
            android:fontFamily="@font/poppins_regular" />
    </LinearLayout>
</androidx.cardview.widget.CardView>