<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="12dp"
    android:layout_marginBottom="16dp"
    android:padding="16dp"
    card_view:cardBackgroundColor="@color/blanco">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tituloInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_alertas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/negro" />

        <View
            android:layout_width="48dp"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:background="@color/rojo_manzana" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAlertas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:nestedScrollingEnabled="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/contenidoInfoAlerta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gris_claro"
            android:textColor="@color/gris_oscuro"
            android:padding="12dp"
            android:fontFamily="@font/poppins_regular"
            android:visibility="visible"
            android:text="@string/texto_cargando_alertas" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
